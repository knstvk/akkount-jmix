<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://browseCaption">
    <data>
        <collection id="operationDs"
                         class="akkount.entity.Operation"
                         fetchPlan="operation-browse">
            <loader id="operationsDl">
                <query>
                    <![CDATA[select o from akk_Operation o order by o.opDate desc, o.createTs desc]]>
                    <condition>
                        <and>
                            <c:jpql><c:where>o.category = :category</c:where></c:jpql>
                            <c:jpql><c:where>@dateAfter(o.opDate, :fromDate)</c:where></c:jpql>
                            <c:jpql><c:where>@dateBefore(o.opDate, :toDate)</c:where></c:jpql>
                            <c:jpql><c:where>o.acc1.currencyCode = :currency1</c:where></c:jpql>
                            <c:jpql><c:where>o.acc2.currencyCode = :currency2</c:where></c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <layout expand="operationTable"
            spacing="true">
        <label id="descriptionLab"/>
        <groupTable id="operationTable"
                    width="100%" dataContainer="operationDs">
            <actions>
                <action id="excel" type="excelExport"/>
            </actions>
            <columns>
                <column id="opType"/>
                <column id="opDate">
                    <formatter>
                        <date format="msg:///opDateFormat"/>
                    </formatter>
                </column>
                <column id="acc1"/>
                <column id="amount1">
                    <formatter>
                        <custom bean="akk_DecimalFormatter"/>
                    </formatter>
                </column>
                <column id="acc2"/>
                <column id="amount2">
                    <formatter>
                        <custom bean="akk_DecimalFormatter"/>
                    </formatter>
                </column>
                <column id="category"/>
                <column id="comments"/>
                <column id="createdBy"/>
            </columns>
            <simplePagination/>
            <buttonsPanel>
                <button action="operationTable.excel"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
